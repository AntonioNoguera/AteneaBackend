generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int    @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      user_role @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum user_role {
  ADMIN
  EDITOR
  USER
}
